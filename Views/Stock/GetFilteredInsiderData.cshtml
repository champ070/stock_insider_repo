@model IEnumerable<stock_promo.Models.InsiderData>
@{
    int count = 0;
}
<div class="table-responsive">
    @if(Model != null){
   if(Model.Count() > 0){
            count = Model.Count();
        }
}
    <table class="table">
        <thead>
            <tr>
                <th>@count</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.SYMBOL)</th>
                <th>@Html.DisplayNameFor(model => model.COMPANY)</th>
                <th>@Html.DisplayNameFor(model => model.CATEGORYOFPERSON)</th>
                <th>@Html.DisplayNameFor(model => model.SHAREHOLDINGPRIOR)</th>
                <th>@Html.DisplayNameFor(model => model.SHAREHOLDINGPOST)</th>                
                <th>@Html.DisplayNameFor(model => model.Buyprice)</th>
                <th>@Html.DisplayNameFor(model => model.DATEOFALLOTMENTACQUISITIONFROM)</th>
                <th>@Html.DisplayNameFor(model => model.BROADCASTEDATEANDTIME)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem=> item.SYMBOL)</td>
                <td>@Html.DisplayFor(modelItem=> item.COMPANY)</td>
                <td>@Html.DisplayFor(modelItem=> item.CATEGORYOFPERSON)</td>
                <td>@Html.DisplayFor(modelItem=> item.SHAREHOLDINGPRIOR)</td>
                <td>@Html.DisplayFor(modelItem=> item.SHAREHOLDINGPOST)</td>
                <td>@Html.DisplayFor(modelItem=> item.Buyprice)</td>
                <td>@Html.DisplayFor(modelItem=> item.DATEOFALLOTMENTACQUISITIONFROM)</td>
                <td>@Html.DisplayFor(modelItem=> item.BROADCASTEDATEANDTIME)</td>
            </tr>
            }
        </tbody>
    </table>
    </div>